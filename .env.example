# =============================================================================
# Environment variables for the Parking Reservation System
# Copy this file to .env and fill in the values.
# =============================================================================

# --- Logging ---
# Log level for console output: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=DEBUG
# Log file path (default: logs/app.log)
LOG_FILE=logs/app.log
# Max file size before rotation (e.g. "100 MB", "1 GB")
LOG_ROTATION=100 MB
# Number of old rotated log files to keep (e.g. "5", "30 days")
LOG_RETENTION=5

# --- Database ---
# Local dev: postgresql://parkinguser:parkingpass@localhost:5432/parkingreservation
# Docker: postgresql://parkinguser:parkingpass@postgres:5432/parkingreservation (service name)
DATABASE_URL=postgresql://parkinguser:parkingpass@localhost:5432/parkingreservation
# Set to true to use PostgreSQL persistence, false for in-memory (dev/testing)
USE_POSTGRES=false

# --- Reservation settings ---
MAX_RESERVATION_DAYS=30
ADMIN_APPROVAL_REQUIRED=true

# --- FastAPI ---
API_HOST=0.0.0.0
API_PORT=8000
# Base URL for API client (Streamlit frontend uses this)
# Local dev: http://localhost:8000/api/v1
# Docker: http://api:8000/api/v1 (service name)
API_BASE_URL=http://localhost:8000/api/v1

# --- LLM ---
LOCAL_MODE=true
OLLAMA_MODEL=llama3.2
# Local dev: http://localhost:11434/v1
# Docker: http://ollama:11434/v1 (service name)
OLLAMA_BASE_URL=http://localhost:11434/v1
OPENROUTER_API_KEY=
MODEL_NAME=google/gemini-flash-1.5
OPENAI_API_KEY=
